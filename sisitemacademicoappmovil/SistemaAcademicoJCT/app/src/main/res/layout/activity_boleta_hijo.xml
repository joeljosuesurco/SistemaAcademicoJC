                android:padding="8dp">

                <TableRow android:background="#E3F2FD">
                    <TextView android:text="MATERIAS"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView android:text="1er Trim"
